<raid>
	<!-- Message broadcast -->
	<!-- Broadcast types: warning, event, default, description, smallstatus, blueconsole, redconsole -->
	<announce delay="1000" type="warning" message="woof woof" />
	<announce delay="25000" type="warning" message="woof" />

	<!-- Area spawns - you can specify raid area or use range value -->
	<areaspawn delay="2000" radius="4" centerx="1032" centery="994" centerz="7">
		<monster name="wolf" amount="20" /><!-- Specified amount -->
	</areaspawn>

	

